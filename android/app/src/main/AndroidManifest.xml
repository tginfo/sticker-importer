<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.tginfo.stickerimport">
    <queries>
        <intent>
            <action android:name="org.telegram.messenger.CREATE_STICKER_PACK" />
            <data android:mimeType="image/*" />
        </intent>
        <intent>
            <action android:name="org.telegram.messenger.CREATE_STICKER_PACK" />
            <data android:mimeType="application/x-tgsticker" />
        </intent>
    </queries>
   <application
        android:label="Sticker Import"
        android:icon="@mipmap/ic_launcher"
        android:localeConfig="@xml/locales_config">
       <provider
           android:name="androidx.core.content.FileProvider"
           android:authorities="me.tginfo.fileprovider"
           android:exported="false"
           android:grantUriPermissions="true">
           <meta-data
               android:name="android.support.FILE_PROVIDER_PATHS"
               android:resource="@xml/file_paths" />
       </provider>

       <activity
            android:name=".MainActivity"
            android:label="Importer"
            android:launchMode="singleTop"
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize"
            android:exported="true">
            <!-- Specifies an Android theme to apply to this Activity as soon as
                 the Android process has started. This theme is visible to the user
                 while the Flutter UI initializes. After that, this theme continues
                 to determine the Window background behind the Flutter UI. -->
            <meta-data
              android:name="io.flutter.embedding.android.NormalTheme"
              android:resource="@style/NormalTheme"
              />
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <!-- Don't delete the meta-data below.
             This is used by the Flutter tool to generate GeneratedPluginRegistrant.java -->
        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />

        <service
            android:name="androidx.appcompat.app.AppLocalesMetadataHolderService"
            android:enabled="false"
            android:exported="false">
                <meta-data
                    android:name="autoStoreLocales"
                    android:value="true" />
        </service>
    </application>
    <uses-permission android:name="android.permission.INTERNET"/>
</manifest>
